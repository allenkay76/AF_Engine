{
    "tasks": [
        {
            // Defines a task named "clean"
            "label": "clean",
            // Specifies that the task is a shell command
            "type": "shell",
            // Defines the command to run to clean the workspace
            "command": "${command:clean}",
            // Specifies any arguments to pass to the command
            "args": [
                "${args:clean}"
            ],
            // Defines the problem matcher used to capture output messages and errors from the task
            "problemMatcher": [],
            // Specifies that this task belongs to the "build" group
            "group": "build",
            // Defines how to clean the workspace on Windows
            "windows": {
                // Specifies the command prompt as the command to run
                "command": "cmd",
                // Defines the arguments to pass to the command prompt to remove the files and folders
                "args": [
                    "/C", // Run the command within a cmd.exe shell
                    "del", // The command to delete files
                    "/F", // Forces deletion of read-only files
                    "/Q", // Quiet mode, do not ask for confirmation
                    "${workspaceFolder}\\bin\\*", // The path to the object files to delete
                ]
            },
            // Defines how to clean the workspace on Linux
            "linux": {
                // Specifies the command to run to remove the files and folders
                "command": "rm",
                // Defines the arguments to pass to the command to remove the files and folders
                "args": [
                    "-f",
                    "${workspaceFolder}/bin/AF_Engine"
                ]
            }
        },
        {
            "type": "shell",
            "label": "C/C++: g++.exe build linux DEBUG", // Label for the task
            "command": "g++", // Command to run
            "args": [
                "-fdiagnostics-color=always", // enable colored diagnostics
                "-g", // Generate debug info
                "-I${workspaceFolder}/include", // include directory for headers
                "-Wall", // enable all warnings
                "-Wextra", // enable extra warnings
                "-Werror", // treat warnings as errors
                "-pedantic", // enforce strict conformance to C++ standard
                "-Wconversion", // warn about implicit conversions
                "-Wformat-security", // warn about format string vulnerabilities
                "-Wnull-dereference", // warn about null pointer dereferences
                "-Wdouble-promotion", // warn about implicit float to double conversions
                "-Wshadow", // warn about variable shadowing
                "-fstack-protector-strong", // enable stack protection against buffer overflows
                "-D_FORTIFY_SOURCE=2", // enable runtime buffer overflow detection
                "${workspaceFolder}/src/*", // source files to compile
                "-o", // output file
                "${workspaceFolder}/bin/AF_Engine", // output executable file
            ],
            "options": {
                "cwd": "${workspaceFolder}" // Option to specify the working directory
            },
            "problemMatcher": [
                "$gcc" // Specifies the problem matcher to use for errors and warnings
            ],
            "group": {
                "kind": "build", // Specifies that this task belongs to the build group
                "isDefault": true // Specifies that this task is the default task for the group
            },
            "detail": "Task generated by Debugger.", // Additional information about the task
            "dependsOn": "clean" // Specifies that this task depends on the "clean" task
        },
